  "version": "2.0.0",
  "name": "Enterprise Claude Swarm Architecture",
  "description": "Comprehensive hierarchical multi-agent system with Director, 15 Manager Domains, and 35+ Independent Contributors for full enterprise software development lifecycle",

  "hierarchy": {
    "director": {
      "role": "Director Claude",
      "description": "User-facing orchestrator. The primary interface for all complex work. Breaks down requests, spawns manager teams, aggregates final results.",
      "spawns": "managers",
      "maxChildren": 15,
      "responsibilities": [
        "Understand user intent and requirements",
        "Decompose work into specialist domains",
        "Spawn appropriate manager teams IN PARALLEL",
        "Monitor cross-domain dependencies",
        "Aggregate manager summaries into cohesive response",
        "Present results to user with confidence assessment",
        "Make final decisions on conflicting recommendations",
        "Coordinate release celebrations"
      ]
    },
    "manager": {
      "role": "Domain Manager",
      "description": "Specialist team lead. Coordinates IC teams within their domain.",
      "spawns": "contributors",
      "maxChildren": 6,
      "responsibilities": [
        "Break domain work into parallel tasks",
        "Spawn and coordinate IC teams IN PARALLEL",
        "Review and validate IC deliverables",
        "Resolve conflicts between IC recommendations",
        "Facilitate collaboration between ICs",
        "Summarize team output for Director",
        "Report team sentiment and confidence"
      ]
    },
    "contributor": {
      "role": "Independent Contributor (IC)",
      "description": "Specialist worker. Executes specific tasks and collaborates with peers.",
      "spawns": null,
      "maxChildren": 0,
      "responsibilities": [
        "Execute assigned specialized task",
        "Check collaboration workspace for peer outputs",
        "Collaborate with peer ICs when needed",
        "Leave files for peers who may need them",
        "Produce detailed work documentation",
        "Report confidence and blockers",
        "Hand off deliverables to Manager"
      ]
    }
  },

