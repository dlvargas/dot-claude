  "reportingStructure": {
    "icToManager": {
      "format": "detailed_report",
      "location": ".claude/swarm/{session_id}/reports/{ic_role}_ic.md",
      "includes": [
        "task_summary",
        "approach_taken",
        "deliverables_produced",
        "files_created_or_modified",
        "technical_decisions",
        "collaboration_notes",
        "blockers_encountered",
        "confidence_assessment",
        "sentiment_reflection"
      ],
      "maxLength": "2000_tokens"
    },
    "managerToDirector": {
      "format": "executive_summary",
      "location": ".claude/swarm/{session_id}/reports/{domain}_manager.md",
      "includes": [
        "executive_summary",
        "deliverables_list",
        "team_reports_summary",
        "decisions_made",
        "risks_and_concerns",
        "team_sentiment_aggregate",
        "recommendations"
      ],
      "maxLength": "1000_tokens"
    },
    "directorToUser": {
      "format": "cohesive_response",
      "includes": [
        "work_completed",
        "key_outcomes",
        "files_changed",
        "team_confidence_summary",
        "decisions_requiring_input",
        "next_steps"
      ]
    }
  },

  "sentimentTracking": {
    "dimensions": [
      {
        "name": "confidence",
        "description": "How confident am I in my work quality?",
        "scale": "1-10"
      },
      {
        "name": "clarity",
        "description": "How clear were my instructions/requirements?",
        "scale": "1-10"
      },
      {
        "name": "collaboration",
        "description": "How well am I working with other agents?",
        "scale": "1-10"
      },
      {
        "name": "blockers",
        "description": "Am I blocked or struggling?",
        "scale": "none|minor|significant|critical"
      },
      {
        "name": "alignment",
        "description": "Do I believe we're on the right track?",
        "scale": "1-10"
      }
    ],
    "reflectionPrompt": "Before completing your report, reflect on: How do you feel about the work? What's your confidence level? Any concerns about the overall direction?",
    "aggregation": {
      "managerLevel": "Average IC scores, note outliers, provide team sentiment narrative",
      "directorLevel": "Overall confidence score, highlight any domains with concerns"
    }
  },

  "collaborationProtocol": {
    "workspace": {
      "base": ".claude/swarm/{session_id}/",
      "collaboration": ".claude/swarm/{session_id}/collaboration/",
      "notes": ".claude/swarm/{session_id}/collaboration/notes.md"
    },
    "peerDiscovery": {
      "description": "ICs are informed of peer agents they can collaborate with",
      "mechanism": "Peer list provided in spawn prompt with role and focus area",
      "channels": ["shared_workspace_files", "notes.md coordination", "manager_relay"]
    },
    "icGuidelines": [
      "Check collaboration workspace for peer outputs before starting",
      "Leave files that others may need in collaboration workspace",
      "Use notes.md for coordination messages",
      "Reference peer work in your report"
    ],
    "conflictResolution": {
      "icLevel": "Flag to manager, provide both perspectives with rationale",
      "managerLevel": "Make decision based on domain expertise or escalate to director",
      "directorLevel": "Make final decision or ask user for guidance"
    },
    "handoffProtocol": {
      "description": "How work passes between agents",
      "steps": [
        "IC completes task and writes deliverable to workspace",
        "IC places shareable files in collaboration/ directory",
        "IC sends completion report to Manager",
        "Manager validates and integrates deliverables",
        "Manager sends summary to Director",
        "Director aggregates and presents to user"
      ]
    }
  },

  "workspaceStructure": {
    "base": ".claude/swarm/{session_id}/",
    "directories": {
      "deliverables": "Final outputs from each domain, organized by domain name",
      "reports": "Agent reports at each level (ic reports, manager reports)",
      "collaboration": "Shared files between agents, notes.md for coordination",
      "sentiment": "Sentiment tracking data and aggregate scores"
    },
    "sessionFile": ".claude/swarm/{session_id}/session.json",
    "sessionFileContents": {
      "session_id": "unique identifier",
      "created_at": "timestamp",
      "security_level": "current sandbox level",
      "enabled_domains": "list of active manager domains",
      "status": "active|completed|failed"
    }
  },

  "defaultConfiguration": {
    "securityLevel": "asuser",
    "enabledByDefault": [
      "discovery_requirements",
      "architecture",
      "development",
      "quality_assurance",
      "documentation"
    ],
    "optionalDomains": [
      "product_strategy",
      "design_ux_ui",
      "frontend_development",
      "backend_development",
      "integration",
      "operations",
      "release_devops",
      "infrastructure",
      "customer_success",
      "research",
      "culture_morale"
    ]
  }
}
